<div class='container-fluid' data-controller="gptchats-overview">
  <h4 class="text-center mt-3 mb-3">Chat overview</h4>
  <div class="row flex-grow-1">
    <!-- Sidebar -->
    <div id="sidebar" class="d-flex flex-column flex-shrink-0 bg-light col-3 p-3">
      <ul class="list-group">
        <% @gptchats.each do |n| %>
          <li class="p-2 mb-2 list-group-item d-flex justify-content-between align-items-center" data-gptchatroom-id="<%=n.id%>" data-action="click->gptchats-overview#revealContent">
            <div class="ml-5">
              <%= image_tag("chatgptlogoo.jpg", class: "rounded-circle", style: "width: 40px; height: 40px; border-radius: 50%")%>
            </div>
            <div class="text-right">
              <p class="mb-0 chat-time"><%= n.updated_at.strftime('%H:%M') %></p>
              <p class="small text-muted mb-0"><%= n.updated_at.strftime('%Y-%m-%d') %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Chatroom on the right -->
    <div class="col-9 p-3">
      <%# added for chats card %>
      <i class="caret-down"></i>
      <p class="d-none"></p>
      <%# added for chats card %>
      <div data-gptchats-overview-target="content">
        <% if @chatroom.present? %>
        <% else %>
          <p>No chatroom selected</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
